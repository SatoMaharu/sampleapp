<% provide(:title, "Users") %>

<h1>利用者一覧</h1>

<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <%= will_paginate %>
    <table class="table table-hover">
      <thead>         
        <th>名前</th>
        <th></th>
      </thead>
        
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user.id) %></td>
            <td align="right">
              <%= link_to "削除", user_path(user.id), method: :delete, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>