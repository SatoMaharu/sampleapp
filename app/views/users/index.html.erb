<% provide(:title, "Users") %>

<h1>利用者一覧</h1>

<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <%= will_paginate %>
    <table class="table table-hover">
      <thead>         
        <th>名前</th>
        <th></th>
      </thead>
        
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user.name, user_path(user.id) %>
              <% if user.admin? %>
                <span class="label label-primary label-user-division">管理者</span>
              <% else %>
                <span class="label label-success label-user-division">一般</span>
            </td>
                <td align="right">
                  <%= link_to "削除", user_path(user.id), method: :delete, data: { confirm: "「#{user.name}」を削除してよろしいですか？" }, class: "btn btn-danger" %>
                </td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>