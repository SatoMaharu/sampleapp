<% provide(:title, @user.name) %>

<h1>プロフィール</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered", id="user-table">
      <tr>
        <th>ID</th>
        <td><%= @user.id %></td>        
      </tr>
      
      <tr>  
       <th>名前</th>
        <td><%= @user.name %></td>
      </tr>
        
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
        
      <tr>
        <th>作成日</th>
        <td><%= l(@user.created_at) %></td>
      </tr>
    </table>
  </div>
</div>    