<% provide(:title, @user.name) %>

<h1>ユーザー情報の変更</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user, url: user_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      
      <%= f.label :name, class: "label-edit" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :email, class: "label-edit" %>
      <%= f.text_field :email, class: "form-control" %>
      
      <%= f.label :password, class: "label-edit" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.label :password_confirmation, class: "label-edit" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-md" %>
      <%= link_to "キャンセル", current_user, class: "btn btn-default" %>
    <% end %>
  </div>
</div>