<% provide(:title, "New Task") %>

<h1>タスク新規作成</h1>

<div class="tasks-new col-md-6 col-md-offset-3">
    <%= form_with model: @task, url: user_tasks_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
     
      <%= f.label :note %>
      <%= f.text_area :note, rows: 7, class: "form-control" %>
      
      <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>