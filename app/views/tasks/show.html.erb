<% provide(:title, @user.name) %>

<h1>タスク詳細</h1>

<table class="table table-bordered ", id="task-table">
  <tr>
    <th>ID</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>名称</th>
    <td><%= @task.name %></td>
  </tr>
  <tr>
    <th>詳細</th>
    <td><%= @task.note %></td>
  </tr>
  <tr>
    <th>作成日</th>
    <td><%= l(@task.created_at) %></td>
  </tr>  
  <tr>
    <th>更新日</th>
    <td><%= l(@task.updated_at) %></td>
  </tr>
</table>