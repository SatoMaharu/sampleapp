<% provide(:title, @user.name) %>

<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @task, url: user_task_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
     
      <%= f.label :note %>
      <%= f.text_area :note, rows: 7, class: "form-control" %>
     
      <%= f.submit "編集", class: "btn btn-primary" %>
      <%= link_to "キャンセル", user_tasks_path, class: "btn btn-default" %>
    <% end %>
  </div>
</div>